@model csharp_web_exam.Models.AlumnoViewModel


<div class=" card text-primary">
    <div class=" card-header text-center ">
        <h5>Alumno</h5>
    </div>   
    <div class=" card-body ">
        <dl class="row">
            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.NOMBRE)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NOMBRE)
            </dd>
            
            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.PATERNO)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PATERNO)
            </dd>
          
            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.MATERNO)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MATERNO)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.GENERO)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GENERO.GENERO_DESC)
            </dd>

            <dt class="col-sm-2 text-center text-dark">
                @Html.DisplayNameFor(model => model.CORREO)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CORREO)
            </dd>
            
        </dl>
    </div>
    <div class=" card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model.ALUMNO_ID" class="btn btn-outline-warning btn-sm">Editar</a>
        <a asp-action="Index" class=" btn btn-outline-success btn-sm">volver a la lista</a>
    </div>   
</div>

