@model csharp_web_exam.Models.AlumnoViewModel

<div class=" card text-primary">
    <div class="card-header text-center">
        <h5>Editar Alumno</h5>
    </div>
    <div class=" card-body text-primary">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ALUMNO_ID" />
                    <div class="form-group">
                        <label asp-for="NOMBRE" class="control-label"></label>
                        <input asp-for="NOMBRE" class="form-control" />
                        <span asp-validation-for="NOMBRE" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PATERNO" class="control-label"></label>
                        <textarea asp-for="PATERNO" class="form-control"></textarea>
                        <span asp-validation-for="PATERNO" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="MATERNO" class="control-label"></label>
                        <textarea asp-for="MATERNO" class="form-control"></textarea>
                        <span asp-validation-for="MATERNO" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="GENERO_ID" class="control-label"></label>
                        <select asp-for="GENERO_ID" class="form-control" asp-items="ViewBag.GENERO_ID">
                        </select>
                        <span asp-validation-for="GENERO_ID" class="text-danger"></span>
                    </div>
                     <div class="form-group">
                        <label asp-for="CORREO" class="control-label"></label>
                        <textarea asp-for="CORREO" class="form-control"></textarea>
                        <span asp-validation-for="CORREO" class="text-danger"></span>
                    </div>
                    <div class=" card-footer text-center">
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-outline-primary btn-sm" />
                            <a asp-action="Index" class="btn btn-outline-success btn-sm">Volver a la lista</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
   
</div>

